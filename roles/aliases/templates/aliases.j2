grsub () {
    if [ -z "$1" ]; then
        echo "Please provide a submodule path/name"
    else
        git submodule deinit -f -- $1
        rm -rf .git/modules/$1
        git rm -f $1
    fi
}

bak () {
    LOGDATE=`date +%Y%m%dT%H%M%S`
    cp "$1" "$1.bak.$LOGDATE"
}
