# Local/private config goes in the include
[include]
    path = ~/.gitconfig.local
[alias]
    subup = submodule update --init --recursive --remote
    subst = submodule foreach \"git status\"
    st = status --ignore-submodules
    submaster = submodule foreach 'git fetch origin --tags && git checkout master && git pull'
    gl='pull --prune'
    glog="log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
    gp='push origin HEAD'
    gc='commit'
    gca='commit -a'
    gco='checkout'
    gcb='copy-branch-name'
    gb='branch'
    gac='add -A && git commit -m'
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    excludesfile = ~/.gitignore
    editor = vim
